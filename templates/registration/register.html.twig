{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-light text-center mb-8 text-gray-800">
          Créer un compte
        </h1>

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="mb-6 p-4 bg-gray-100 text-red-400 text-sm rounded border-l-4 border-red-400">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(registrationForm.firstname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
            {% if registrationForm.firstname.vars.errors|length > 0 %}
                <p class="mt-1 text-sm text-red-400">{{ form_errors(registrationForm.firstname) }}</p>
            {% endif %}
        </div>

        <div>
            {{ form_label(registrationForm.lastname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
            {% if registrationForm.lastname.vars.errors|length > 0 %}
                <p class="mt-1 text-sm text-red-400">{{ form_errors(registrationForm.lastname) }}</p>
            {% endif %}
        </div>

            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <p class="mt-1 text-sm text-red-400">
                    {{ form_errors(registrationForm.email) }}
                    </p>
                {% endif %}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
                {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                    <p class="mt-1 text-sm text-red-400">{{ form_errors(registrationForm.plainPassword) }}</p>
                {% endif %}
            </div>

            <div class="pt-2">
                <button type="submit" class="w-full bg-gray-800 text-white py-3 px-4 rounded-md hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                    Registre
                </button>
            </div>
            
            <div class="text-center text-sm text-gray-500 mt-4">
               Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-gray-700 hover:underline">Se connecter</a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}