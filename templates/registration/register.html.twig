{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center text-black">
    <div class="w-full max-w-md p-8 border border-black rounded-2xl shadow-lg">
        <h1 class="text-2xl font-semibold text-center mb-6">Register</h1>

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="mb-4 p-4 bg-black text-white text-sm rounded">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full mt-1 px-3 py-2 border border-black rounded bg-white text-black'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full mt-1 px-3 py-2 border border-black rounded bg-white text-black'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 border-black rounded'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-sm'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div>
                <button type="submit" class="w-full bg-black text-white py-2 px-4 rounded hover:bg-opacity-80 transition">
                    Register
                </button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
