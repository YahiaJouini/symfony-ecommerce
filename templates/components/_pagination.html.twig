{% if pageCount > 1 %}
<div class="flex justify-center my-8">
  <nav class="flex items-center space-x-1">
    {# First Page #}
    {% if first is defined and current != first %}
      <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" 
         class="p-2 rounded-md text-gray-600 hover:bg-gray-100 transition-colors duration-200">
        <span class="sr-only">First</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
        </svg>
      </a>
    {% endif %}

    {# Previous Page #}
    {% if previous is defined %}
      <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" 
         class="p-2 rounded-md text-gray-600 hover:bg-gray-100 transition-colors duration-200">
        <span class="sr-only">Previous</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
    {% endif %}

    {# Page Numbers #}
    {% for page in pagesInRange %}
      {% if page != current %}
        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" 
           class="px-3.5 py-1.5 rounded-md text-gray-600 hover:bg-gray-100 transition-colors duration-200">
          {{ page }}
        </a>
      {% else %}
        <span class="px-3.5 py-1.5 rounded-md bg-gray-200 text-gray-800 font-medium">
          {{ page }}
        </span>
      {% endif %}
    {% endfor %}

    {# Next Page #}
    {% if next is defined %}
      <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}" 
         class="p-2 rounded-md text-gray-600 hover:bg-gray-100 transition-colors duration-200">
        <span class="sr-only">Next</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    {% endif %}

    {# Last Page #}
    {% if last is defined and current != last %}
      <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" 
         class="p-2 rounded-md text-gray-600 hover:bg-gray-100 transition-colors duration-200">
        <span class="sr-only">Last</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
        </svg>
      </a>
    {% endif %}
  </nav>
</div>
{% endif %}