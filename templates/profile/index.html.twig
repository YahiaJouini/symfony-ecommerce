{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-light text-center mb-8 text-gray-800">
            Mettre à jour mon profil
        </h1>

        {% if profileForm.vars.errors|length > 0 %}
            <div class="mb-6 p-4 bg-gray-100 text-red-400 text-sm rounded border-l-4 border-red-400">
                {{ form_errors(profileForm) }}
            </div>
        {% endif %}

        {{ form_start(profileForm, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(profileForm.firstname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(profileForm.firstname, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
            {% if profileForm.firstname.vars.errors|length > 0 %}
                <p class="mt-1 text-sm text-red-400">{{ form_errors(profileForm.firstname) }}</p>
            {% endif %}
        </div>

        <div>
            {{ form_label(profileForm.lastname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(profileForm.lastname, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
            {% if profileForm.lastname.vars.errors|length > 0 %}
                <p class="mt-1 text-sm text-red-400">{{ form_errors(profileForm.lastname) }}</p>
            {% endif %}
        </div>

        <div>
            {{ form_label(profileForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(profileForm.email, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-400 rounded-md'}}) }}
            {% if profileForm.email.vars.errors|length > 0 %}
                <p class="mt-1 text-sm text-red-400">{{ form_errors(profileForm.email) }}</p>
            {% endif %}
        </div>

        <div class="pt-2">
            <button type="submit" class="w-full bg-gray-800 text-white py-3 px-4 rounded-md hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                Sauvegarder
            </button>
        </div>

        <div class="text-center text-sm text-gray-500 mt-4">
            <a href="{{ path('app_home') }}" class="text-gray-700 hover:underline">Retour à l'accueil</a>
        </div>

        {{ form_end(profileForm) }}
    </div>
</div>
{% endblock %}
