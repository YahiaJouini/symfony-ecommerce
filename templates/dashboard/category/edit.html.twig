{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8 max-w-2xl">
        <h1 class="text-2xl font-semibold text-gray-800 mb-8">Edit Category</h1>

        {{ form_start(form, {'attr': {'class': 'bg-white rounded-lg border border-gray-300 shadow-md p-6'}}) }}
            <div class="space-y-6">
                {{ form_row(form.name, {
                    'row_attr': {'class': 'form-row'}
                }) }}
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Current Image</label>
                    {% if category.image %}
                        <img src="{{ category.image }}" alt="{{ category.name }}" class="h-32 w-32 object-cover rounded">
                    {% else %}
                        <p>No image</p>
                    {% endif %}
                </div>
                
                {{ form_row(form.image, {
                    'row_attr': {'class': 'form-row'}
                }) }}
            </div>

            <div class="mt-6 flex space-x-3">
                <button type="submit" class="px-4 py-2 bg-gray-800 text-white rounded-md border border-gray-800 hover:bg-gray-700 transition duration-200">
                    Update
                </button>
                <a href="{{ path('admin_category') }}" class="px-4 py-2 border border-gray-400 text-gray-700 rounded-md hover:bg-gray-50 transition duration-200">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}