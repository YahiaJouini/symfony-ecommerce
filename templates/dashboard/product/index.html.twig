{% extends 'base.html.twig' %}

{% block title %}Product Management{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 pb-8 mt-28">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-bold">Product Management</h1>
            <a href="{{ path('admin_product_new') }}" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                Create New Product
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead>
                    <tr>
                        <th class="py-2 px-4 border-b">ID</th>
                        <th class="py-2 px-4 border-b">Name</th>
                        <th class="py-2 px-4 border-b">Price</th>
                        <th class="py-2 px-4 border-b">Stock</th>
                        <th class="py-2 px-4 border-b">Show on Home</th>
                        <th class="py-2 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <td class="py-2 px-4 border-b">{{ product.id }}</td>
                            <td class="py-2 px-4 border-b">{{ product.name }}</td>
                            <td class="py-2 px-4 border-b">{{ product.price|number_format(2, '.', ',') }} €</td>
                            <td class="py-2 px-4 border-b">{{ product.stock }}</td>
                            <td class="py-2 px-4 border-b">
                                {% if product.showHome %}
                                    <span class="text-green-500">✓</span>
                                {% else %}
                                    <span class="text-red-500">✗</span>
                                {% endif %}
                            </td>
                            <td class="py-2 px-4 border-b">
                                <a href="{{ path('admin_product_show', {'id': product.id}) }}" class="text-blue-500 hover:text-blue-700 mr-2">Show</a>
                                <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="text-green-500 hover:text-green-700 mr-2">Edit</a>
                                <form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button type="submit" class="text-red-500 hover:text-red-700">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="py-4 px-4 border-b text-center">No products found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}