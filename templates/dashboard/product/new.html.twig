{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-8">Create new Product</h1>

        {{ form_start(form) }}
            <div class="grid grid-cols-1 gap-6">
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.price) }}
                {{ form_row(form.stock) }}
                {{ form_row(form.image) }}
                {{ form_row(form.showHome) }}
                {{ form_row(form.category) }}
            </div>

            <div class="mt-6">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                    Save
                </button>
                <a href="{{ path('admin_product') }}" class="ml-2 bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}