{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-8">Edit Product</h1>

        {{ form_start(form) }}
            <div class="grid grid-cols-1 gap-6">
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.price) }}
                {{ form_row(form.stock) }}
                
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Current Image</label>
                    {% if product.image %}
                        <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" class="h-32 w-32 object-cover rounded">
                    {% else %}
                        <p>No image</p>
                    {% endif %}
                </div>
                
                {{ form_row(form.image) }}
                {{ form_row(form.showHome) }}
                {{ form_row(form.category) }}
            </div>

            <div class="mt-6">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                    Update
                </button>
                <a href="{{ path('admin_product') }}" class="ml-2 bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}