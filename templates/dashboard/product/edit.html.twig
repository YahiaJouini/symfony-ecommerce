{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8 max-w-2xl mt-20">
        <h1 class="text-2xl font-semibold text-gray-800 mb-3 text-center">Modifier Produit</h1>

        {{ form_start(form, {'attr': {'class': 'bg-white rounded-lg border border-gray-300 shadow-md p-6'}}) }}
            <div class="space-y-4">
                <!-- Product Name Field -->
                {{ form_row(form.name, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}
                
                <!-- Product Description Field -->
                {{ form_row(form.description, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}
                
                {{ form_row(form.price, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}
                
                {{ form_row(form.stock, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Current Image</label>
                    {% if product.image %}
                        <img src="{{ product.image }}" alt="{{ product.name }}" class="h-32 w-32 object-cover rounded">
                    {% else %}
                        <p>No image</p>
                    {% endif %}
                </div>
                
                {{ form_row(form.image, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}

                {{ form_row(form.showHome, {
                    'attr': {'class': 'h-4 w-4 rounded border-gray-400 text-gray-600 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row flex items-center'},
                    'label_attr': {'class': 'block text-sm text-gray-700'}
                }) }}
                
                {{ form_row(form.category, {
                    'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-gray-500'},
                    'row_attr': {'class': 'form-row'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                }) }}
            </div>

            <div class="mt-6 flex space-x-3">
                <button type="submit" class="px-4 py-2 bg-gray-800 text-white rounded-md border border-gray-800 hover:bg-gray-700 transition duration-200">
                    Modifier
                </button>
                <a href="{{ path('admin_product') }}" class="px-4 py-2 border border-gray-400 text-gray-700 rounded-md hover:bg-gray-50 transition duration-200">
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
