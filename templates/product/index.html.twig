{# product/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
   <div class="w-fit mx-auto">
    <h1 class="text-center text-3xl font-bold my-8">Product List</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 w-fit">
        {% for product in products %}
            <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white p-6">
                <img src="{{product.image}}"
                alt="{{ product.name }}" 
                class="w-full h-48 object-cover rounded-t-lg mb-4">
                <div class="text-center">
                    <h5 class="text-xl font-semibold text-gray-900">{{ product.name }}</h5>
                    <p class="text-sm text-gray-500 my-2">
                        {% if product.description %}
                            {{ product.description }}
                        {% else %}
                            <span class="text-gray-400">
                            No description available
                            </span>
                        {% endif %}
                    </p>
                    <p class="text-lg font-medium text-green-600">
                        ${{ product.price }}
                    </p>
                   {% if product.stock>0 %}
                   {{ product.stock }} in stock
                   {% else %}
                     <span class="text-red-500">
                        Out of stock
                    </span>
                    {% endif %}
                </div>
                <div class="mt-4 text-center">
                    <a href="#" class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">View Details</a>
                </div>
            </div>
        {% else %}
            <p class="text-center text-gray-600">No products available.</p>
        {% endfor %}
    </div>
   </div>
{% endblock %}
